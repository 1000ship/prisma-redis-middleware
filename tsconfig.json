{
  "include": ["index.ts", "test/index.test.ts"],
  "exclude": ["node_modules", "example"],
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNEXT"],
    "moduleResolution": "Node",
    "declaration": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  }
}
